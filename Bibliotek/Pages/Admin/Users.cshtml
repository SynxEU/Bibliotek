@page
@using Bibliotek.Domain.Models;
@model Bibliotek.Pages.Admin.UsersModel
@{
    ViewData["Title"] = "Users";
}

<div class="container">
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">E-mail</th>
                <th scope="col">Number</th>
                <th scope="col">Admin</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (Loaner loaner in Model.ListOfLoaners)
            {
                <tr>
                    <th scope="row">@(loaner.Id - 1)</th>
                    <td>@loaner.Name</td>
                    <td>@loaner.Email</td>
                    <td>@loaner.Number</td>
                    <td>@loaner.Admin</td>
                    <td class="d-flex justify-content-end">
                        <form method="post">
                            <button class="btn btn-outline-primary me-2" type="submit" asp-page-handler="Edit" asp-route-loanerId="@loaner.Id" ><i class="fa-solid fa-pen"></i></button>
                        </form>
                        <button class="btn btn-outline-danger me-2" data-bs-toggle="modal" data-bs-target="#loanerDeleteModal-@loaner.Id"><i class="fa-solid fa-trash-can"></i></button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@foreach (Loaner loaner in Model.ListOfLoaners)
{
    <div class="modal fade" id="loanerDeleteModal-@loaner.Id" tabindex="-1" aria-labelledby="loanerDeleteModal" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5 text-danger" id="loanerDeleteModal-@loaner.Id">Delete</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        Name: @loaner.Name
                    </div>
                    <div class="mb-3">
                        Email: @loaner.Email
                    </div>
                    <div class="mb-3">
                        Number: @loaner.Number
                    </div>
                    <div class="mb-3">
                        Admin: @{
                            if (loaner.Admin)
                            {
                                <p>Is admin</p>
                            }
                            else
                            {
                                <p>Not admin</p>
                            }
                        }
                    </div>
                    <div class="mb-3">
                        Are you sure you want to delete this loaner?
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-success" data-bs-dismiss="modal">No</button>
                    <form method="post">
                        <button type="submit" class="btn btn-danger" data-bs-dismiss="modal" asp-page-handler="Delete" asp-route-loanerId="@loaner.Id">Yes</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
}