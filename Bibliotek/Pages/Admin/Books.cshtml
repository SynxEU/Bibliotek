@page
@using Bibliotek.Domain.Models;
@model Bibliotek.Pages.Admin.BooksModel
@{
    ViewData["Title"] = "Mange Books";
}

<div class="container d-flex justify-content-end">
    <form method="post" class="d-flex">
        <button class="btn btn-outline-primary me-2" type="submit" asp-page-handler="Create"><i class="fa-solid fa-book">  Create</i></button>
    </form>
</div>
<div class="container">
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Title</th>
                <th scope="col">Authors ID</th>
                <th scope="col">Loaners ID</th>
                <th scope="col">Genres</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (Books book in Model.ListOfBooks)
            {
                <tr>
                    <th scope="row">@book.Id</th>
                    <td>@book.Title</td>
                    <td>@book.Author_ID</td>
                    <td>
                        @{
                            int adjustedLoanerID = book.Loaner_ID - 1;

                            if (adjustedLoanerID < 0)
                            {
                                adjustedLoanerID = 0;
                            }

                            @adjustedLoanerID
                        }
                    </td>
                    <td class="dropdown">
                        <a class="dropdown-toggle text-dark" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Genres
                        </a>
                        <ul class="dropdown-menu" data-bs-auto-close="false">
                            @foreach (Genre genre in book.Genres)
                            {
                                <li><a class="dropdown-item">@genre.GenreName</a></li>
                            }
                        </ul>
                    </td>
                    <td class="d-flex justify-content-end">
                        <form method="post">
                            <button class="btn btn-outline-primary me-2" type="submit" asp-page-handler="Edit" asp-route-bookId="@book.Id"><i class="fa-solid fa-pen"></i></button>
                        </form>
                        <button class="btn btn-outline-danger me-2" data-bs-toggle="modal" data-bs-target="#bookDeleteModal-@book.Id"><i class="fa-solid fa-trash-can"></i></button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@foreach (Books book in Model.ListOfBooks)
{
    <div class="modal fade" id="bookDeleteModal-@book.Id" tabindex="-1" aria-labelledby="bookDeleteModal" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5 text-danger" id="bookDeleteModal-@book.Id">Delete</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        Title of Book: @book.Title
                    </div>
                    <div class="mb-3">
                        Author: @book.Author_ID
                    </div>
                    <div class="mb-3">
                        Loaner: @book.Loaner_ID
                    </div>
                    <div class="mb-3">
                        <ul class="dropdown-menu" data-bs-auto-close="false">
                            @foreach (Genre genre in book.Genres)
                            {
                                <li><a class="dropdown-item">@genre.GenreName</a></li>
                            }
                        </ul>
                    </div>
                    <div class="mb-3">
                        Are you sure you want to delete this book?
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-success" data-bs-dismiss="modal">No</button>
                    <form method="post">
                        <button type="submit" class="btn btn-danger" data-bs-dismiss="modal" asp-page-handler="Delete" asp-route-bookId="@book.Id">Yes</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
}