@page
@model Bibliotek.Pages.Admin.GenresModel
@{
    ViewData["Title"] = "Genres";
}

<div class="container">
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Genre</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.ListOfGenres.Count(); i++)
            {
                <tr>
                    <th scope="row">@(i + 1)</th>
                    <td>@Model.ListOfGenres[i].GenreName</td>
                </tr>
            }
        </tbody>
    </table>
</div>