@page
@model Bibliotek.Pages.User.settingsModel
@{
    ViewData["Title"] = "Settings";
}
<div class="container">
	<div class="row gutters">
		<div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
			<div class="card h-100">
				<div class="card-body">
                    <form method="post">
					    <div class="row gutters">
						    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
							    <h6 class="mb-2 text-primary">Personal Details</h6>
						    </div>
                            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                <div class="form-group">
                                    <label for="firstNameInput">First name</label>
                                    <input type="Text"
                                        class="form-control"
                                        id="firstNameInput"
                                        placeholder="First name"
                                        asp-for="FirstName">
                                 </div>
                            </div>
                            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                <div class="form-group">
                                    <label for="lastNameInput">Last name</label>
                                    <input type="Text"
                                           class="form-control"
                                           id="lastNameInput"
                                           placeholder="Last name"
                                           asp-for="LastName">
                                </div>
                            </div>
                            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                <div class="form-group">
                                    <label for="emailAddressInput">Email address</label>
                                    <input type="email"
                                        class="form-control"
                                        id="emailAddressInput"
                                        placeholder="name@example.com"
                                        asp-for="EmailAddress">
                                </div>
                            </div>
                            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                <div class="form-group">
                                    <label for="telInput">Phone Number</label>
                                    <input type="tel"
                                        class="form-control"
                                        id="telInput"
                                        placeholder="Number"
                                        asp-for="PhoneNumber">
                                </div>
                            </div>
                        </div>
                        <div class="row gutters">
                            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                                <h6 class="mt-3 mb-2 text-primary">New Password</h6>
                            </div>
                            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                <div class="form-group">
                                    <label for="passwordInput">Password</label>
                                    <input type="password"
                                           class="form-control"
                                           id="passwordInput"
                                           placeholder="Password"
                                           asp-for="Password">
                                </div>
                            </div>
                            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                <div class="form-group">
                                    <label for="confirmPasswordInput">Confirm password</label>
                                    <input type="password"
                                        class="form-control"
                                        id="confirmPasswordInput"
                                        placeholder="Confirm password"
                                        asp-for="ConfirmPassword">
                                </div>
                            </div>
                        </div>
                        <div class="row gutters">
                            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                                <h6 class="mt-3 mb-2 text-primary">Current password</h6>
                            </div>
                            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                <div class="form-group">
                                    <label for="passwordInput">Password</label>
                                    <input type="password"
                                        class="form-control"
                                        id="currentPasswordInput"
                                        placeholder="Password"
                                        required
                                        asp-for="CurrentPassword">
                                </div>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary mt-3" asp-page-handler="Update">
                            Update
                        </button>
                        <button type="submit" class="btn btn-secondary mt-3" asp-page-handler="Cancel">
                            Cancel
                        </button>
                        <button type="submit" class="btn btn-danger mt-3" asp-page-handler="Delete">
                            Delete
                        </button>
                    </form>
				</div>
			</div>
		</div>
	</div>
</div>